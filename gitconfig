[include]
    path = .gitconfig.local
[push]
	default = nothing
[color]
	ui = true
[core]
	editor = vim -c \"set fenc=utf-8\"
	pager = nkf -w | LESSCHARSET=utf-8 less
	excludesfile = ~/.gitignore
[grep]
	lineNumber = true
[alias]
	cam = commit --amend
	dc = diff --cached
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	d6 = diff HEAD~~~~~~
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[ghq]
    root = ~/.ghq
    root = ~/go/packages

[include]
    path = .gitconfig.local
